@model Kullanıcı

<h2>Kullanıcı Ekle</h2>
<hr>
<form asp-controller="Kullanıcı" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="KullanıcıAd" class="form-label">Kullanıcı Adı</label>
        <input asp-for="KullanıcıAd" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="KullanıcıSoyad" class="form-label">Kullanıcı Soyad</label>
        <input asp-for="KullanıcıSoyad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Eposta</label>
        <input asp-for="Eposta" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon</label>
        <input asp-for="Telefon" class="form-control">
    </div>

    <button type="submit" class="btn btn-secondary">Kaydet</button>

</form>